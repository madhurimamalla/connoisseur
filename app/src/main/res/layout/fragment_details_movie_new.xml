<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.home.MovieDetailBaseActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="@string/collapsing_toolbar">

            <ImageView
                android:id="@+id/movie_poster_discover_screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/toolbar_image_activity_details"
                android:fitsSystemWindows="true"
                android:scaleType="fitCenter"
                app:layout_collapseMode="parallax"
                tools:src="@drawable/terminal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:alpha="0.8"
                android:background="@drawable/side_nav_bar"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/metabar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/detail_metabar_vert_padding"
                    android:contentDescription="@string/metabar_consisting_of_information_about_the_movie"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/detail_inner_horiz_margin"
                    android:paddingTop="@dimen/detail_metabar_vert_padding"
                    android:paddingRight="@dimen/detail_inner_horiz_margin"
                    android:paddingBottom="@dimen/detail_metabar_vert_padding">

                    <TextView
                        android:id="@+id/movie_details_title"
                        style="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/movie_name"
                        android:fontFamily="@font/rosario"
                        android:lineSpacingMultiplier="0.9"
                        android:paddingBottom="@dimen/detail_metabar_title_bottom_padding"
                        android:text="@string/movie_name"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="@dimen/detail_title_text_size"
                        android:textStyle="bold"
                        tools:text="@string/movie_name" />

                    <TextView
                        android:id="@+id/movie_tagline"
                        style="?android:attr/textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/movie_tagline"
                        android:fontFamily="@font/rosario"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        tools:text="@string/movie_tagline" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="2dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/movie_year_of_release_title"
                                style="?android:attr/textAppearanceSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/rosario"
                                android:text="@string/date_of_release"
                                android:textColor="@android:color/white"
                                tools:text="@string/date_of_release" />

                            <TextView
                                android:id="@+id/movie_year_of_release_value"
                                style="?android:attr/textAppearanceSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/rosario"
                                android:textColor="@android:color/white"
                                tools:text="01/01/2020" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/movie_rating_title"
                                style="?android:attr/textAppearanceSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:fontFamily="@font/rosario"
                                android:text="@string/Rating_Title"
                                android:textColor="@android:color/white"
                                tools:text="@string/Rating_Title" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/movie_rating_value"
                                    style="?android:attr/textAppearanceSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:fontFamily="@font/rosario"
                                    android:textColor="@android:color/white"
                                    tools:text="8.5" />

                                <TextView
                                    android:id="@+id/movie_rating_value_outof"
                                    style="?android:attr/textAppearanceSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:fontFamily="@font/rosario"
                                    android:paddingRight="1dp"
                                    android:paddingEnd="1dp"
                                    android:text="/10"
                                    android:textColor="@android:color/white"
                                    tools:text="/10 " />

                                <TextView
                                    android:id="@+id/movie_vote_count"
                                    style="?android:attr/textAppearanceSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/rosario"
                                    android:textColor="@android:color/white"
                                    tools:text="(1000)" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/plot_summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/detail_body_bottom_margin"
            android:background="@android:color/white"
            android:fontFamily="@font/rosario"
            android:lineSpacingExtra="8dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/long_latin"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/dislike_movie_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:alpha="0.8"
        android:cropToPadding="false"
        android:src="@drawable/dislike"
        app:elevation="8dp"
        app:layout_anchor="@id/appBar"
        app:layout_anchorGravity="bottom|start" />

    <ImageView
        android:id="@+id/add_to_watchlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:alpha="0.8"
        android:cropToPadding="false"
        android:src="@drawable/binoculars"
        app:elevation="8dp"
        app:layout_anchor="@id/appBar"
        app:layout_anchorGravity="bottom|center" />

    <ImageView
        android:id="@+id/like_movie_button"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:alpha="0.8"
        android:cropToPadding="false"
        android:src="@drawable/like_flat"
        app:elevation="8dp"
        app:layout_anchor="@id/appBar"
        app:layout_anchorGravity="bottom|end" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>